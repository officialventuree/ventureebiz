
{
  "entities": {
    "Company": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Company",
      "type": "object",
      "description": "Represents a company registered on the Venturee Biz SaaS platform, including its subscription status and administrative user.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Company entity."
        },
        "name": {
          "type": "string",
          "description": "The official name of the company."
        },
        "contactEmail": {
          "type": "string",
          "description": "The automatically generated primary contact email for the company.",
          "format": "email"
        },
        "status": {
          "type": "string",
          "description": "The current operational status (e.g., 'Active', 'Expired', 'Suspended').",
          "enum": ["Active", "Expired", "Suspended", "Pending"]
        },
        "registrationDate": {
          "type": "string",
          "description": "The date and time when the company was first registered.",
          "format": "date-time"
        },
        "expiryDate": {
          "type": "string",
          "description": "The date and time when the company's current subscription expires.",
          "format": "date-time"
        },
        "enabledModules": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Modules provisioned for this company (mart, laundry, rent, services)."
        },
        "duitNowQr": {
          "type": "string",
          "description": "Base64 or URL of the company's specific DuitNow QR code."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["id", "name", "status", "registrationDate"]
    },
    "PricingCycle": {
      "title": "PricingCycle",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "durationInDays": { "type": "number" }
      },
      "required": ["id", "name", "durationInDays"]
    },
    "ModulePricing": {
      "title": "ModulePricing",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "moduleId": { "type": "string" },
        "pricingCycleId": { "type": "string" },
        "price": { "type": "number" },
        "currencyId": { "type": "string" }
      },
      "required": ["id", "moduleId", "pricingCycleId", "price"]
    },
    "PlatformProfitEntry": {
      "title": "PlatformProfitEntry",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "paymentTransactionId": { "type": "string" },
        "companyId": { "type": "string" },
        "amount": { "type": "number" },
        "currencyId": { "type": "string" },
        "entryDate": { "type": "string", "format": "date-time" },
        "type": { "type": "string", "enum": ["InitialSubscription", "Renewal", "Refund"] }
      },
      "required": ["id", "amount", "entryDate", "type"]
    }
  },
  "auth": {
    "providers": [
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/companies/{companyId}",
        "definition": {
          "entityName": "Company",
          "schema": { "$ref": "#/backend/entities/Company" },
          "description": "Core company records."
        }
      },
      {
        "path": "/module_pricings/{pricingId}",
        "definition": {
          "entityName": "ModulePricing",
          "schema": { "$ref": "#/backend/entities/ModulePricing" },
          "description": "Global SaaS pricing configuration."
        }
      },
      {
        "path": "/platform_profit_entries/{profitId}",
        "definition": {
          "entityName": "PlatformProfitEntry",
          "schema": { "$ref": "#/backend/entities/PlatformProfitEntry" },
          "description": "Ledger of all SaaS revenue."
        }
      }
    ]
  }
}
