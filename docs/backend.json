
{
  "entities": {
    "Company": {
      "title": "Company",
      "type": "object",
      "description": "Core company profile and login credentials.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "password": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "capitalLimit": { "type": "number" },
        "capitalPeriod": { "type": "string", "enum": ["daily", "weekly", "monthly", "yearly"] }
      },
      "required": ["id", "name", "email", "createdAt"]
    },
    "User": {
      "title": "User",
      "type": "object",
      "description": "User account records for manual login system.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "username": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "password": { "type": "string" },
        "role": { "type": "string", "enum": ["admin", "company", "viewer"] },
        "companyId": { "type": "string" }
      },
      "required": ["id", "name", "email", "password", "role"]
    },
    "Product": {
      "title": "Product",
      "type": "object",
      "description": "Retail products for the Mart module.",
      "properties": {
        "id": { "type": "string" },
        "companyId": { "type": "string" },
        "name": { "type": "string" },
        "costPrice": { "type": "number" },
        "sellingPrice": { "type": "number" },
        "stock": { "type": "number" },
        "sku": { "type": "string" }
      },
      "required": ["id", "companyId", "name", "costPrice", "sellingPrice", "stock"]
    },
    "LaundryStudent": {
      "title": "LaundryStudent",
      "type": "object",
      "description": "Student records for the Mandatory Laundry system.",
      "properties": {
        "id": { "type": "string" },
        "companyId": { "type": "string" },
        "name": { "type": "string" },
        "matrixNumber": { "type": "string" },
        "balance": { "type": "number" }
      },
      "required": ["id", "companyId", "name", "matrixNumber", "balance"]
    },
    "SaleTransaction": {
      "title": "SaleTransaction",
      "type": "object",
      "description": "Unified transaction record for all modules.",
      "properties": {
        "id": { "type": "string" },
        "companyId": { "type": "string" },
        "module": { "type": "string", "enum": ["mart", "laundry", "rent", "services"] },
        "totalAmount": { "type": "number" },
        "profit": { "type": "number" },
        "timestamp": { "type": "string", "format": "date-time" },
        "items": { "type": "array", "items": { "type": "object" } }
      }
    },
    "CapitalPurchase": {
      "title": "CapitalPurchase",
      "type": "object",
      "description": "Records of company spending that count against capital limits.",
      "properties": {
        "id": { "type": "string" },
        "companyId": { "type": "string" },
        "amount": { "type": "number" },
        "description": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" }
      }
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "/companies/{companyId}": {
      "schema": "Company",
      "description": "Root company data."
    },
    "/company_users/{userId}": {
      "schema": "User",
      "description": "Centralized user records for manual login."
    },
    "/companies/{companyId}/products/{productId}": {
      "schema": "Product",
      "description": "Mart retail inventory."
    },
    "/companies/{companyId}/laundryStudents/{studentId}": {
      "schema": "LaundryStudent",
      "description": "Students registered for laundry."
    },
    "/companies/{companyId}/transactions/{transactionId}": {
      "schema": "SaleTransaction",
      "description": "All sales history."
    },
    "/companies/{companyId}/purchases/{purchaseId}": {
      "schema": "CapitalPurchase",
      "description": "Capital spending logs."
    }
  }
}
