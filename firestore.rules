rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    /**
     * VENTUREE BIZ PROTOTYPE RULES
     * 
     * Instruction: "dont use firebase authentication"
     * Result: Allowing public read/write for rapid prototyping.
     * In a production environment, these should be locked down to specific UIDs.
     */
    match /{document=**} {
      allow read, write: if true;
    }
  }
}